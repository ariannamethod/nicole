# Nicole Environment Variables
# Copy this file to .env and fill in values

# Telegram Bot Token (get from @BotFather)
TELEGRAM_TOKEN=your_telegram_bot_token_here

# Optional settings
NICOLE_SESSION_TIMEOUT=3600
NICOLE_DB_PATH=nicole_production.db
NICOLE_LOG_LEVEL=INFO
NICOLE_MAX_TRANSFORMERS=10

# H2O compiler settings
H2O_MAX_EXECUTION_TIME=30
H2O_MEMORY_LIMIT=256MB

# ME principles settings
ME_RESONANCE_THRESHOLD=0.5
ME_SEMANTIC_DISTANCE_50=0.5
ME_SEMANTIC_DISTANCE_70=0.7
ME_BIGRAM_MIN_COUNT=2
